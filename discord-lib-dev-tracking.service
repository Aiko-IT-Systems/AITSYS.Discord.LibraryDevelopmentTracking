[Unit]
Description=Discord Library Development Tracking Bot
StartLimitIntervalSec=300
StartLimitBurst=5

[Service]
ExecStart="/opt/bots/discord-lib-dev-tracking/AITSYS.Discord.LibraryDevelopmentTracking"
WorkingDirectory=/opt/bots/discord-lib-dev-tracking
Restart=on-failure
RestartSec=10
KillSignal=SIGINT
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false
SyslogIdentifier=DiscordLibDevTracking
Environment=DOTNET_ROOT=/usr/bin/dotnet

[Install]
WantedBy=multi-user.target
